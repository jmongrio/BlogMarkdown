@{
    ViewData["Title"] = "Lista de Posts Markdown";
    var posts = ViewBag.Posts as List<string>;
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<div class="container my-4" style="max-width: 900px;">
    <h1 class="h1 mb-4">Posts disponibles</h1>

    <a class="btn btn-outline-primary mb-3" asp-action="Index">Volver</a>

    <form asp-action="DownloadSelected" method="post">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th class="text-center" scope="col">
                        <input type="checkbox" id="selectAll" onclick="toggleAll(this)" aria-label="Seleccionar todos" />
                    </th>
                    <th scope="col">Nombre del archivo</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in posts)
                {
                    <tr>
                        <td class="text-center align-middle">
                            <input type="checkbox" name="selectedFiles" value="@post" aria-label="Seleccionar @post" />
                        </td>
                        <td class="align-middle">@post</td>
                        <td class="text-center align-middle">
                            <a class="btn btn-sm btn-outline-secondary me-2" href="@Url.Action("DownloadSingle", "Blog", new { fileName = post })" title="Descargar @post">
                                <i class="bi bi-download"></i> Descargar
                            </a>

                            <form asp-action="DeletePost" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de eliminar este post?');">
                                <input type="hidden" name="fileName" value="@post" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar @post">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary mt-2">
            <i class="bi bi-file-zip"></i> Descargar seleccionados (.zip)
        </button>
    </form>
</div>

@section Scripts {
    <script>
        function toggleAll(source) {
            const checkboxes = document.querySelectorAll('input[name="selectedFiles"]');
            checkboxes.forEach(cb => cb.checked = source.checked);
        }
    </script>
}
